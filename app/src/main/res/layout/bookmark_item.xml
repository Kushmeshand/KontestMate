<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmarkCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="6dp"
    android:backgroundTint="#1E1E1E"
    android:elevation="4dp"
    android:padding="10dp"
    android:radius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Platform Icon -->
        <ImageView
            android:id="@+id/platformIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/leetcode"
            android:contentDescription="Platform Icon" />

        <!-- Title and Contest -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/problemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem Title"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contest Name"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Star Toggle -->
        <ImageView
            android:id="@+id/bookmarkToggle"
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:background="@drawable/contest_item_bg"
            android:src="@drawable/bookmarkremove"
            android:contentDescription="Bookmark Toggle" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
