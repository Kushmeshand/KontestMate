<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/contest_item_bg">
    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Refresh Button -->
        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⟳ Refresh"
            android:layout_gravity="end"
            android:backgroundTint="#1F1F1F"
            android:textColor="#FFFFFF"
            android:drawableLeft="@android:drawable/ic_popup_sync"
            android:padding="10dp"
            android:elevation="4dp" />

        <LinearLayout
            android:id="@+id/platformTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/btnLeetCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/tab_selected">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leetcode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LeetCode"
                    android:id="@+id/textleetcode"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCodeforces"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/tab_unselected">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/codeforceslogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codeforces"
                    android:id="@+id/textCodeforces"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCodechef"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/tab_unselected">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/codecheflogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CodeChef"
                    android:id="@+id/textCodechef"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>


        <!-- User Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="#2C2929">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 👤 Username: --"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvCurrentRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 📊 Current Rating: --"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvMaxRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 🏆 Max Rating: --"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvQuestionsSolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ✅ Questions Solved: --"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daily Tip -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="#2C2C2C">

            <TextView
                android:id="@+id/tvDailyTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans_medium"
                android:padding="16dp"
                android:text="💡 Daily Tip: Loading..."
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

        <!-- POTD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/potdContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="#252528">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvPotdTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/albert_sans_medium"
                    android:text=" 📌 Problem Of The Day: "
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPotdSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary: ..."
                    android:textColor="#C5CAE9"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvPotdHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hint: ..."
                    android:textColor="#B2FF59"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="#2C2C2C">

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="📝 Write your daily notes here..."
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:textColorHint="#9E9E9E"
                android:padding="12dp"
                android:textSize="15sp"
                android:gravity="top"
                android:inputType="textMultiLine"/>
        </androidx.cardview.widget.CardView>
        <!-- Optional Clear Button -->
        <Button
            android:id="@+id/btnClearNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗑 Clear Notes"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:backgroundTint="#AF1818"
            android:textColor="#FFFFFF"
            android:padding="8dp"/>
    </LinearLayout>
    </ScrollView>
    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/home_menu"
        app:labelVisibilityMode="labeled" />
</LinearLayout>